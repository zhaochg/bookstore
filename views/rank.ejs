<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>在线书城</title>
    <link rel="stylesheet" href="/bootstrap-3.3.7/css/bootstrap.min.css">
    <!--bootstrap官方样式-->
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <!--强跨浏览器表现的一致性css 重置样式-->
    <link rel="stylesheet" href="/stylesheets/bookstore.css">
    <link rel="stylesheet" href="/stylesheets/base.css">
    <link rel="stylesheet" href="/stylesheets/shangj.css">
    <link rel="stylesheet" href="/stylesheets/iconfont.css">
    <!--自用样式-->
</head>
<body>
<!--头部-->
<%-include('navbar')%>
<!--路径导航-->
<div class="container">
    <ol class="breadcrumb" style="background: rgba(212,212,212,0.5)">
        <li><a href="/">首页</a></li>
        <li class="active">排行榜</li>
    </ol>
</div>
<!--排行榜-->
<body>
<div class="container">
    <div class="row" style="height: 800px;">
        <div class="col-md-2">
            <h4>排行榜</h4>
            <hr>
            <nav>
                <ul class="nav nav-pills nav-stacked" id="myTab">
                    <li><a href="#book" data-toggle="tab">畅销图书榜</a></li>
                    <li><a href="#newBooks" data-toggle="tab">畅销新书榜</a></li>
                </ul>
            </nav>
        </div>

        <div class="col-md-10 tab-content">
            <div class="tab-pane fade" id="book" style="width: 100%;height: 800px;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-9">
                            <!--内容-->
                            <div class="w">
                                <div class="fl w-t">
                                    <div id="div">
                                        <strong>畅销书推荐</strong>
                                    </div>

                                    <!--一本书-->
                                    <% for(var i=0; i<xiao_List.length; i++){%>
                                    <div class="box">
                                        <div class="box1">
                                            <% if(xiao_List[i].img) {%>
                                            <img src="/images/54654654.jpg">
                                            <% }else {%>
                                            <img src="/images/54654654.jpg">
                                            <% }%>
                                            <strong><%= xiao_List[i].name%></strong>
                                            <p><%= xiao_List[i].author_id%></p>
                                            <p><%= xiao_List[i].content.substr(0,39)+'...'%></p>
                                            <div class="i-r">
                                                <div class="fl">
                                                    <i class="iconfont icon-gouwuchekong"></i>
                                                    <p>购物车</p>
                                                </div>
                                                &nbsp;|&nbsp;
                                                <div class="fr"><i class="iconfont icon-xin"></i><p>收藏</p></div>

                                            </div>
                                        </div>
                                    </div>
                                    <% } %>

                                </div>
                            </div>
                            <!--分页-->
                            <div class="text-center">
                                <% if(totalPage> 1){ %>
                                <nav aria-label="Page navigation" style="margin-left: 30%">
                                    <ul class="pagination">
                                        <%if(page > 1){%>
                                        <li>
                                            <a href="/rank/?page=<%=parseInt(page)-1%>" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        <% } %>
                                        <li><a href="#">第<%= page %>页/共<%=totalPage%>页</a></li>
                                        <%if(page <= totalPage){%>
                                        <li>
                                            <a href="/rank/?page=<%=parseInt(page)+1%>" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                        <%}%>
                                    </ul>
                                </nav>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="newBooks" style="width: 100%;height: 800px;">
                <div class="container">
                    <div class="row">
                        <div class="col-md-9">
                            <!--内容-->
                            <div class="w">
                                <div class="fl w-t">
                                    <div id="div">
                                        <strong>新书推荐新书推荐</strong>
                                    </div>
                                    <!--一本书-->
                                    <% for(var i=0; i<news_List.length; i++){%>
                                    <div class="box">
                                        <div class="box1">
                                            <% if(news_List[i].img) {%>
                                            <img src="/images/54654654.jpg">
                                            <% }else {%>
                                            <img src="/images/54654654.jpg">
                                            <% }%>
                                            <strong><%= news_List[i].name%></strong>
                                            <p><%= news_List[i].author_id%></p>
                                            <p><%= news_List[i].content.substr(0,39)+'...'%></p>
                                            <div class="i-r">
                                                <div class="fl">
                                                    <i class="iconfont icon-gouwuchekong"></i>
                                                    <p>购物车</p>
                                                </div>
                                                &nbsp;|&nbsp;
                                                <div class="fr"><i class="iconfont icon-xin"></i><p>收藏</p></div>
                                                <input type="hidden"  value="<%=alt%>" id="alt">
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                </div>
                            </div>
                            <!--分页-->
                            <div class="text-center">
                                <% if(totalPage> 1){ %>
                                <nav aria-label="Page navigation" style="margin-left: 30%">
                                    <ul class="pagination">
                                        <%if(pagex > 1){%>
                                        <li>
                                            <a href="/rank/?pagex=<%=parseInt(pagex)-1%>&alt=1" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        <% } %>
                                        <li><a href="#">第<%= pagex %>页/共<%=totalPage%>页</a></li>
                                        <%if(pagex <= totalPage){%>
                                        <li>
                                            <a href="/rank/?pagex=<%=parseInt(pagex)+1%>&alt=1" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                        <%}%>
                                    </ul>
                                </nav>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<!--底部-->
<%-include('footer')%>
</body>
<script src="/javascripts/jquery-3.2.1.min.js"></script><!--jquery-->
<script src="/bootstrap-3.3.7/js/bootstrap.js"></script><!--bootstrap官方js-->

<script>
    $(function () {

        var alt=$("#alt").val()
        console.log(alt)

        if(!alt){
            console.log(222222)
            $('#myTab li:eq(0) a').tab('show');
        }else{
            console.log(444444)
            $('#myTab li:eq(1) a').tab('show');
        }
    });
</script>
</html>