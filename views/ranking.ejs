<!--排行榜-->
<ul id="myTab" class="nav nav-tabs nav-justified">
    <li class="active"><a href="#home" data-toggle="tab">畅销榜</a></li>
    <li><a href="#ios" data-toggle="tab">新书榜</a></li>
</ul>
<div id="myTabContent" class="tab-content table-p">
    <div class="tab-pane fade in active" id="home">
        <table class="table table-striped">
            <% for (var i=0; i<xiao_List.length; i++) { %>
            <tr>
                <td><%='0'+(i+1)%></td>
                <td><%=xiao_List[i].name.substr(0,3)+'...'%></td>
                <td class="text-danger">￥<%=xiao_List[i].price%></td>
            </tr>
            <tr>
                <td></td>
                <td><%=xiao_List[i].author_id.name%></td>
                <td></td>
            </tr>
            <% } %>
        </table>
        <div class="text-right">
            <a href="/recommend">查看完整榜单&raquo;</a>
        </div>
    </div>
    <div class="tab-pane fade" id="ios">
        <table class="table table-striped">
            <% for (var i=0; i<news_List.length; i++) { %>
            <tr>
                <td><%='0'+(i+1)%></td>
                <td style="width: 20em;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;"><%=news_List[i].name%></td>
                <td class="text-danger">￥<%=news_List[i].price%></td>
            </tr>
            <tr>
                <td></td>
                <td><%=news_List[i].author_id.name%></td>
                <td></td>
            </tr>
            <% } %>
        </table>
        <div class="text-right">
            <a href="/newBooks">查看完整榜单&raquo;</a>
        </div>
    </div>
</div>

