<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>在线书城注册页</title>
    <link rel="stylesheet" href="/bootstrap-3.3.7/css/bootstrap.min.css">
    <!--bootstrap官方样式-->
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <!--强跨浏览器表现的一致性css 重置样式-->
    <link rel="stylesheet" href="/stylesheets/register.css">
    <!--自用样式-->
</head>
<body>
<!-- 主体 -->
<section class="container login" style="width: 950px;">
    <div style="border-bottom: 1px solid #bebcce; height:50px;width:890px;">
        <span class="heading" id="login">注册</span>
        <span class="heading" id="right">已有有账号,<a href="/users/login"><font color="red">去登录</font></a></span>
    </div>

    <hr>
    <div class="col-md-5 col-md-offset-1">
        <form class="form-horizontal" action="/users/register" method="post" onsubmit="return checkForm()">
            <div class="form-group">
                <input type="email" class="form-control" name="email" id="email" placeholder="请输入邮箱" name="username">
                <div class="hint" id="email-err" style="color: red;"></div>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="nickname" id="nickname" placeholder="请输入昵称" name="username">
                <div class="hint" id="nickname-err" style="color: red;"></div>
            </div>
            <div class="form-group help">
                <input type="password" class="form-control" name="password" id="password" placeholder="请输入密码" name="password">
                <div class="hint" id="password-err" style="color: red;"></div>
                <a href="#" class="fa fa-question-circle"></a> </div><div class="form-group help">
                <input type="password" class="form-control" name="repassword" id="repassword" placeholder="请确认密码" name="password">
                <div class="hint" id="repassword-err" style="color: red;"></div>
                <a href="#" class="fa fa-question-circle"></a> </div>
            <div class="form-group">
                <div class="main-checkbox">
                    <label>
                        <input type="checkbox" required>同意
                        <a href="" style="color: red">《融智教育登录服务协议》</a>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">注册</button>
            </div>
        </form>
    </div>
    <div class="col-md-4 col-md-offset-1"
         id="img"><img src="/images/lietu.jpg" class="img-responsive"></div>
</section>
<div id="btn">
    <span>copyright:All Right 京公网安备号：000000000000 ICP备11010220号-1 京ICP证110513号</span>
</div>

<script src="/javascripts/jquery-3.2.1.min.js"></script><!--jquery-->
<script src="/bootstrap-3.3.7/js/bootstrap.js"></script><!--bootstrap官方js-->
<script src="/javascripts/layer/layer.js"></script>
<script>
    $(function(){
        var err='<%=locals.err%>';
         if(err){
             layer.msg(err);
         }
    })
    /**
     * 表单验证
     */
    // <!--表单验证-->
    function checkForm() {
        var email = $("#email").val();
        var nickname = $("#nickname").val();
        var password = $("#password").val();
        var repassword = $("#repassword").val();

        var isSubmit = true;

        $("#email-err").html('');
        $("#nickname-err").html('');
        $("#password-err").html('');
        $("#repassword-err").html('');

        if (email == '') {
            $("#email-err").html('请填写邮箱地址！');
            isSubmit = false;
        }
        if (nickname == '') {
            $("#nickname-err").html('请填写昵称！');
            isSubmit = false;
        }
        if (password == '') {
            $("#password-err").html('请填密码！');
            isSubmit = false;
        }
        if (repassword == '') {
            $("#repassword-err").html('请填确认密码！');
            isSubmit = false;
        } else if (password != repassword) {
            $("#repassword-err").html('两次密码不一致！');
            isSubmit = false;
        }
        return isSubmit;
    }

</script>
</body>
</html>