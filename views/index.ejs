<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>在线书城</title>
    <link rel="stylesheet" href="/bootstrap-3.3.7/css/bootstrap.min.css">
    <!--bootstrap官方样式-->
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <!--强跨浏览器表现的一致性css 重置样式-->
    <link rel="stylesheet" href="/stylesheets/bookstore.css">
    <!--自用样式-->
</head>
<body>
<!--头部-->
<%-include('navbar')%>
<!--轮播-->
<div class="container">
    <div id="slide" class="carousel slide">
        <!-- 轮播（Carousel）指标 -->
        <ol class="carousel-indicators">
            <li data-target="#slide" data-slide-to="0" class="active"></li>
            <li data-target="#slide" data-slide-to="1"></li>
        </ol>
        <!-- 轮播（Carousel）项目 -->
        <div class="carousel-inner" id="lb-img">
            <div class="item active">
                <img src="/images/banner.jpg">
            </div>
            <div class="item">
                <img src="/images/banner.jpg">
            </div>
        </div>
        <!-- 轮播（Carousel）导航 -->
        <a class="carousel-control left" href="#slide"
           data-slide="prev" ></a>
        <a class="carousel-control right" href="#slide"
           data-slide="next" ></a>
    </div>
</div>
<!--内容-->
<div class="container">
    <div class="row">
        <!--推荐好书-->
        <div class="col-md-9">
            <h4>推荐好书</h4>
            <div  class="text-right">
                <a href="/recommend">查看往期推荐&raquo;</a>
            </div>
            <div class="row">
                <% for (var i=0; i<tui_List.length; i++) { %>
                <div class="col-sm-4 col-md-3">
                    <div class="thumbnail">
                        <%if(tui_List[i].img) {%>
                        <img src="/uploads/<%=tui_List[i].img%>">
                        <% }else {%>
                        <img src="/images/54654654.jpg">
                        <% } %>
                        <div class="caption">
                            <h3 style="overflow: hidden;text-overflow:ellipsis;white-space: nowrap;"><%=tui_List[i].name%></h3>
                            <p style="overflow: hidden;text-overflow:ellipsis;white-space: nowrap;"><%=tui_List[i].content%></p>
                            <p><a href="/balance" class="btn btn-danger">购买</a></p>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        <!--排行榜-->
        <div class="col-md-2 col-md-offset-1">
            <%-include('ranking')%>
        </div>
    </div>
    <div class="row">
        <img style="width: 100%" src="/images/56465465.jpg">
    </div>
    <!--最近上架-->
    <div class="row">
        <div class="col-md-10">
            <h4>最近上架</h4>
            <div  class="text-right">
                <a href="/newBooks">更多&raquo;</a>
            </div>
            <div class="row">
                <% for (var i=0; i<news_List.length; i++) { %>
                <div class="col-sm-4 col-md-3">
                    <div class="thumbnail">
                        <%if(news_List[i].img) {%>
                        <img src="/uploads/<%=news_List[i].img%>">
                        <% }else {%>
                        <img src="/images/65465465.jpg">
                        <% } %>
                        <div class="caption">
                            <h3 style="overflow: hidden;text-overflow:ellipsis;white-space: nowrap;"><%=news_List[i].name%></h3>
                            <p>￥<%=news_List[i].price%></p>
                            <p><a href="/bookInfor" class="btn btn-danger">点击查看</a></p>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>
<!--底部-->
<%-include('footer')%>
</body>
<script src="/javascripts/jquery-3.2.1.min.js"></script><!--jquery-->
<script src="/bootstrap-3.3.7/js/bootstrap.js"></script><!--bootstrap官方js-->
</html>