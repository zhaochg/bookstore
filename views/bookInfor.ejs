<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>在线书城</title>
    <link rel="stylesheet" href="/bootstrap-3.3.7/css/bootstrap.min.css">
    <!--bootstrap官方样式-->
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <!--强跨浏览器表现的一致性css 重置样式-->
    <link rel="stylesheet" href="/stylesheets/bookstore.css">
    <!--自用样式-->
</head>
<body>
<!--头部-->
<%-include('navbar')%>
<!--路径导航-->
<div class="container">
    <ol class="breadcrumb" style="background: rgb(212,212,212)">
        <li><a href="/">融智教育</a></li>
        <li class="active">图书详情</li>
    </ol>
</div>
<!--内容-->
<div class="container">
    <div class="row">
        <!--图书详情-->
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-2">
                    <img src="/images/65465465.jpg">
                </div>
                <div class="col-md-4">
                    <h4><%= book.name%></h4>
                    <small>类别：</small>&nbsp;&nbsp;&nbsp;<strong>文学艺术>诗词歌赋</strong><br>
                    <small>作者：</small>&nbsp;&nbsp;&nbsp;<strong><%=author.name%></strong><br>
                    <small>版权提供：</small>&nbsp;&nbsp;&nbsp;<strong>中华人民第一出版社</strong><br>
                    <form action="/shopping/add" method="post" onsubmit="addShopping()">
                        <div class="count clearfix">
                            <button type="button" id="min" class="btn"><span class="glyphicon glyphicon-minus"></span></button>
                            <input type="text" id="num" value="1" name="num">
                            <input type="hidden" value="<%=book._id%>" id="book" name="book_id">
                            <button type="button" id="add" class="btn"><span class="glyphicon glyphicon-plus"></span></button>
                        </div>
                        <button type="submit" class="btn btn-danger">加入购物车</button>
                        <a id="pay" href="" class="btn btn-default">立即购买</a>
                    </form>
                </div>
            </div>
            <!--简介-->
            <div class="row">
                <div class="bookDetails">
                    <p>简介</p>
                </div>
                <div class="division"></div>
                <!--图书简介-->
                <div class="bookDetails01">
                    <p>图书简介</p>
                </div>
                <hr>
                <div class="textBody">
                    &nbsp;&nbsp;&nbsp;&nbsp;<%= book.content%>
                </div>
                <!--基本信息-->
                <div class="bookDetails01">
                    <p>基本信息</p>
                </div>
                <hr>
                <div class="textBody">
                    <table class="table">
                        <tr>
                            <td>类别：</td>
                            <td>文学艺术>诗词歌赋</td>
                        </tr>
                        <tr>
                            <td>作者：</td>
                            <td><%= author.name%></td>
                        </tr>
                        <tr>
                            <td>版权提供：</td>
                            <td>中国第一人民出版社</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                        </tr>
                    </table>
                </div>
                <!--作者简介-->
                <div class="bookDetails01">
                    <p>作者简介</p>
                </div>
                <hr>
                <div class="textBody">
                    &nbsp;&nbsp;&nbsp;&nbsp;<%= author.content%>
                </div>
                <!--图书评论-->
                <div class="bookDetails01">
                    <p>图书评论</p>
                </div>
                <hr>
                <div class="comment">
                    <div style="width: 35%;height: auto">
                        <b style="margin-right: 30px">共有一条评论</b>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </div>
                    <img src="/images/txicon.jpg">
                    <strong>牛牛</strong><br>
                    <div class="comment-text">很好看呢的呢</div>
                    <div class="text-right">time</div>
                </div>
                <div class="comment">
                    <div style="width: 35%;height: auto">
                        <b style="margin-right: 30px">共有一条评论</b>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                        <span class="glyphicon glyphicon-star"></span>
                    </div>
                    <img src="/images/txicon.jpg">
                    <strong>牛牛</strong><br>
                    <div class="comment-text">很好看呢的呢</div>
                    <div class="text-right">time</div>
                </div>


            </div>
        </div>
        <!--排行榜-->
        <div class="col-md-2 col-md-offset-1">
            <%-include('ranking')%>
        </div>
    </div>
</div>
<!--底部-->
<%-include('footer')%>
</body>
<script src="/javascripts/jquery-3.2.1.min.js"></script><!--jquery-->
<script src="/bootstrap-3.3.7/js/bootstrap.js"></script><!--bootstrap官方js-->
<script src="/javascripts/layer/layer.js"></script>
<script>
    //提示信息
    $(function(){
        var err='<%=locals.error%>';
        if(err){
            layer.msg(err);
        }
    //获得文本框对象
        var t = $("#num");
        var id = $('#book').val();
    //数量增加操作
        $("#add").click(function(){
            t.val(parseInt(t.val())+1)
            if (parseInt(t.val())!=1){
                $('#min').attr('disabled',false);
            }
            $("#pay").attr('href','/shopping/balance?book_id='+id+'&num='+t.val());
        });
    //数量减少操作
        $("#min").click(function(){
            t.val(parseInt(t.val())-1);
            if (parseInt(t.val())==1){
                $('#min').attr('disabled',true);
            }
            $("#pay").attr('href','/shopping/balance?book_id='+id+'&num='+t.val());
        });
        $("#pay").attr('href','/shopping/balance?book_id='+id+'&num='+t.val());
    });
</script>
